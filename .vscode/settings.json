{
  "[javascript][css][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "phpSniffer.executablesFolder": "./wp-content/themes/redex/vendor/bin",
  "phpSniffer.standard": "./wp-content/themes/redex/.phpcs.xml",
  "scss.validate": false
}
