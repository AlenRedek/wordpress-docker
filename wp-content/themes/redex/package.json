{
  "name": "@alenredek/wordpress-docker-webpack",
  "version": "1.0.0",
  "description": "Automated WordPress local development with Docker, Webpack, Babel, linters, and BrowserSync",
  "author": "Alen Redek <alen@redek.me> (https://www.redek.me)",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "docker",
    "webpack",
    "babel",
    "esnext",
    "eslint",
    "stylelint",
    "prettier",
    "phpcs",
    "sass",
    "browsersync"
  ],
  "homepage": "https://github.com/AlenRedek/wordpress-docker-webpack",
  "repository": "git+https://github.com/AlenRedek/wordpress-docker-webpack.git",
  "bugs": {
    "url": "https://github.com/AlenRedek/wordpress-docker-webpack/issues"
  },
  "engines": {
    "node": ">=12.13",
    "npm": ">=6.9",
    "yarn": ">=1.22"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "6.0.0",
    "@types/bootstrap": "4.6.1",
    "@types/jquery": "3.5.13",
    "@types/lodash-es": "4.17.6",
    "@wordpress/scripts": "21.0.2",
    "bootstrap": "4.6.1",
    "browser-sync": "2.27.7",
    "browser-sync-webpack-plugin": "2.3.0",
    "dotenv": "16.0.0",
    "husky": "4.3.8",
    "jquery": "3.6.0",
    "lint-staged": "12.3.4",
    "lodash-es": "4.17.21",
    "stylelint-config-prettier": "9.0.3"
  },
  "scripts": {
    "analyze": "yarn build --webpack-bundle-analyzer",
    "build": "wp-scripts build",
    "check-licenses": "wp-scripts check-licenses --prod",
    "format:js": "wp-scripts format",
    "format:php": "./vendor/bin/phpcbf",
    "lint:js": "wp-scripts lint-js",
    "lint:php": "./vendor/bin/phpcs",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "lint:style": "wp-scripts lint-style",
    "start": "wp-scripts start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "package.json": [
      "yarn check-licenses",
      "yarn lint:pkg-json"
    ],
    "*.js": [
      "yarn lint:js"
    ],
    "*.php": [
      "yarn lint:php"
    ],
    "*.scss": [
      "yarn lint:style"
    ]
  }
}
